<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/recipient_entry"
    android:layout_marginTop="-20dp"
    >

	<com.hover.stax.views.CustomDropdownLayout
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:id="@+id/recipientLabel"
	    app:hint_value="@string/recipientphone_label"
	    app:editable="true"
	    android:layout_weight="1"
	    />

	<ImageButton android:id="@+id/contact_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:paddingVertical="@dimen/margin_13"
	    android:paddingEnd="@dimen/margin_13"
	    android:paddingStart="0dp"
	    app:srcCompat="@drawable/ic_contacts"
	    android:visibility="visible"
	    android:background="@color/transparent"/>

</LinearLayout>
