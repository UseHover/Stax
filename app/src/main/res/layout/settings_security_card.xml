<?xml version="1.0" encoding="utf-8"?>
<com.hover.stax.views.StaxCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/security_cardhead">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSurface"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/margin_10"
            android:paddingVertical="@dimen/margin_13">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/security_head"
                android:textColor="@color/offWhite"
                android:textSize="@dimen/text_16"
                app:fontFamily="@font/brutalista_medium" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:lineSpacingExtra="@dimen/text_spacing_8"
                android:text="@string/security_cardbody"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_16" />
    </LinearLayout>

</com.hover.stax.views.StaxCardView>