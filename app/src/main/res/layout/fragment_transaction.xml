<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_13">

    <com.hover.stax.views.StaxCardView
            android:id="@+id/transactionDetailsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:showBack="true"
            app:title="@string/nav_transaction">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <include
                    android:id="@+id/primaryStatus"
                    layout="@layout/transaction_details_primarystatus" />

            <include
                    android:id="@+id/secondaryStatus"
                    layout="@layout/transaction_details_secondary_status" />

            <include
                    android:id="@+id/info_card"
                    layout="@layout/transaction_details_info_card" />

        </LinearLayout>

    </com.hover.stax.views.StaxCardView>

</androidx.core.widget.NestedScrollView>