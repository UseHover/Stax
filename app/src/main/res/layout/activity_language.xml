<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:layout_marginTop="@dimen/margin_13"
    android:orientation="vertical">

	<com.hover.stax.views.StaxCardView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		app:title="@string/lang_cardhead">

		<RadioGroup
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/margin_10"
		    android:id="@+id/languageRadioGroup"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<com.hover.stax.views.StaxButton
			    android:id="@+id/continueLanguageButton"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentEnd="true"
			    android:layout_marginTop="@dimen/margin_21"
			    android:layout_marginBottom="@dimen/margin_5"
			    android:layout_marginHorizontal="@dimen/margin_13"
			    app:button_text="@string/btn_continue"
			    app:cardElevation="1dp"
			    app:cardCornerRadius="@dimen/margin_5"
			    app:button_text_color="@color/offWhite"
			    app:button_background="@drawable/button_bg" />
		</RelativeLayout>
	</com.hover.stax.views.StaxCardView>
</LinearLayout>