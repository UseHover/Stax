<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"

    app:startDestination="@+id/navigation_home">

	<fragment
	    android:id="@+id/navigation_home"
	    android:name="com.hover.stax.home.HomeFragment"
	    android:label="@string/nav_home"
	    tools:layout="@layout/fragment_home" />

	<fragment
	    android:id="@+id/navigation_buyAirtime"
	    android:name="com.hover.stax.transfers.TransferFragment"
	    android:label="@string/nav_airtime"
	    tools:layout="@layout/fragment_transfer" >
		<argument
			android:name="transaction_type"
			app:argType="string"
			android:defaultValue='airtime' />
	</fragment>

	<fragment
	    android:id="@+id/navigation_moveMoney"
	    android:name="com.hover.stax.transfers.TransferFragment"
	    android:label="@string/nav_money"
	    tools:layout="@layout/fragment_transfer" >
		<argument
			android:name="transaction_type"
			app:argType="string"
			android:defaultValue='p2p' />
	</fragment>

	<fragment
	    android:id="@+id/navigation_security"
	    android:name="com.hover.stax.security.SecurityFragment"
	    android:label="@string/nav_security"
	    tools:layout="@layout/fragment_security" />

	<fragment
		android:id="@+id/transactionDetailsFragment"
		android:name="com.hover.stax.transactions.TransactionDetailsFragment"
		android:label="TransactionDetailsFragment" >
		<argument
			android:name="uuid"
			app:argType="string" />
	</fragment>

	<fragment
	    android:id="@+id/channelsDetailsFragment"
	    android:name="com.hover.stax.channels.ChannelsDetailsFragment"
	    android:label="ChannelsDetailsFragment" >
		<argument
		    android:name="channel_id"
		    app:argType="integer" />
	</fragment>
</navigation>
