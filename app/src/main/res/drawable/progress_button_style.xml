<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:id="@android:id/background">
		<shape android:padding="10dp">
			<gradient
			    android:startColor="@color/brightBlue"
			    android:centerColor="@color/brightBlue"
			    android:centerY="0.75"
			    android:endColor="@color/brightBlue"
			    android:angle="270"
			    />

			<solid android:color="@color/brightBlue"/>
			<corners android:radius="@dimen/radius" />
		</shape>
	</item>



	<item android:id="@android:id/progress">
		<clip>
			<shape android:padding="10dp">
				<gradient
				    android:startColor="@color/brightBluePressed"
				    android:centerColor="@color/brightBluePressed"
				    android:centerY="0.75"
				    android:endColor="@color/brightBluePressed"
				    android:angle="270"
				    />
				<solid android:color="@color/brightBluePressed"/>
				<corners android:radius="@dimen/radius" />
			</shape>
		</clip>
	</item>

</layer-list>