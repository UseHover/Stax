    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/colorBackground</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_stax_dark_white</item>
        <item name="windowSplashScreenAnimationDuration">50</item>

        <item name="postSplashScreenTheme">@style/StaxTheme</item>
        # Required.
    </style>

    <style name="StaxTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brightBlue</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/offWhite</item>

        <item name="colorAccent">@color/brightBlue</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/brightBlue</item>
        <item name="colorOnSecondary">@color/cardViewColor</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/offWhite</item>
        <item name="colorOnBackground">@color/darkGrey</item>
        <item name="colorError">@color/stax_state_red</item>
        <item name="colorOnError">@color/offWhite</item>

        <item name="colorControlNormal">@color/buttonColor</item>
        <item name="colorControlHighlight">@color/brightBlue</item>
        <item name="colorSwitchThumbNormal">@color/grey</item>

        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorBackground</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:fitsSystemWindows">true</item>

        <item name="titleTextColor">@color/offWhite</item>
        <item name="android:textColor">@color/offWhite</item>
        <item name="android:buttonStyle">@style/StaxButton</item>
        <item name="buttonStyle">@style/StaxButton</item>

        <!-- font -->
        <item name="android:fontFamily">@font/brutalista_regular</item>
        <item name="fontFamily">@font/brutalista_regular</item>

        <!-- Fab and dropdowns -->
        <item name="android:popupMenuStyle">@style/StaxPopupMenu</item>
        <item name="popupMenuStyle">@style/StaxPopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/StaxPopupMenu</item>
        <item name="android:listPreferredItemHeightSmall">61dp</item>

        <!-- Snackbars -->
        <item name="snackbarStyle">@style/StaxSnackbar</item>
        <item name="snackbarButtonStyle">@style/StaxButton</item>
        <item name="snackbarTextViewStyle">@style/StaxSnackbarText</item>
    </style>
    
</resources>